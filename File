<script>
let coins = localStorage.getItem("coins")
  ? parseInt(localStorage.getItem("coins"))
  : 0;

updateCoins();

function completeChore(amount) {
  alert("Great job! ğŸ‰ Waiting for parent approval.");
  coins += amount;
  saveCoins();
}

function redeem(cost) {
  if (coins >= cost) {
    coins -= cost;
    saveCoins();
    alert("Reward unlocked! ğŸ‰");
  } else {
    alert("Not enough coins yet!");
  }
}

function saveCoins() {
  localStorage.setItem("coins", coins);
  updateCoins();
}

function updateCoins() {
  document.getElementById("coins").innerText = `Coins: ${coins} ğŸª™`;
}

function showRewards() {
  document.getElementById("choresScreen").classList.add("hidden");
  document.getElementById("rewardsScreen").classList.remove("hidden");
}

function showChores() {
  document.getElementById("rewardsScreen").classList.add("hidden");
  document.getElementById("choresScreen").classList.remove("hidden");
}
</script>

